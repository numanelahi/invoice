{% extends 'base.html.twig' %}

{% block body %}
    <h1>Invoice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ invoice.number }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ invoice.address }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if invoice.date %}{{ invoice.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Product</th>
                {% for amt in invoice.products %}
                <td>{{ amt.product }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

{% endblock %}